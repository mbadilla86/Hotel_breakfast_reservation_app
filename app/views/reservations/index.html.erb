<p id="notice"><%= notice %></p>

<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Room</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
        <td><%= reservation.room_id %></td>
        <td><%= reservation.start_date %></td>
        <td><%= reservation.end_date %></td>
        <td><%= link_to 'Show', hotel_room_reservations_path(@hotel, @room, reservation) %></td>
        <td><%= link_to 'Edit', edit_hotel_room_reservation_path(@hotel, @room, reservation) %></td>
        <td><%= link_to 'Destroy', [@hotel, @room, reservation], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reservation', new_hotel_room_reservation_path(@hotel, @room) %>
<br>
<%= link_to 'Back Room',[@hotel, @room] %>

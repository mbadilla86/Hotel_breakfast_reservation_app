    <script>
        var contenido = document.querySelector('#contenido')
            fetch('https://randomuser.me/api/')
            .then(res => res.json())
            .then(data => {
                console.log(data.results['0'])
                contenido.innerHTML = `
                <img src="${data.results['0'].picture.large}" width="70px" class="img-fluid rounded-circle">`
            })
    </script>
<p id="notice"><%= notice %></p>

<h1>Hello <%= current_user.full_name %></h1>

<% @user_breakfasts.each do |breakfast| %>
  <div class="form_breakfast">
  <%= form_with(model: breakfast, local: false) do |form| %>
    <%= form.hidden_field :user_id, id: false %>
    <%= form.hidden_field :breakfast_id, id: false %>

    <p data-id="<%= breakfast.id %>">
      <%= breakfast.breakfast.date.strftime("%B-%d-%Y") %>
      <%= form.select :place, @places %>
      <%= form.select :time, @times %>
      <%= form.submit %>
    </p>
  <% end %>
  </div class="container-sm my-2">
<% end %>
